<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.FrameLayout">

    <!-- FILE MODE CONTAINER -->
    <LinearLayout
        android:id="@+id/fileContainer"
        android:layout_width="216dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="32dp"
        android:visibility="gone"
        tools:visibility="visible">

        <!-- File preview icon container -->
        <FrameLayout
            android:id="@+id/filePreviewContainer"
            android:layout_width="40dp"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/filePreviewIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter" />

            <!-- Image thumbnail (for IMAGE file type) -->
            <ImageView
                android:id="@+id/filePreviewImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <!-- Video play overlay (for VIDEO file type) -->
            <View
                android:id="@+id/fileVideoOverlay"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/fileVideoPlayIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:visibility="gone" />
        </FrameLayout>

        <!-- File info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/fileNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="middle"
                tools:text="document.pdf" />

            <TextView
                android:id="@+id/fileSizeText"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                tools:text="2.4 MB" />
        </LinearLayout>
    </LinearLayout>

    <!-- MEDIA MODE: thumbnail image -->
    <ImageView
        android:id="@+id/mediaImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <!-- MEDIA MODE: error gradient overlay -->
    <View
        android:id="@+id/mediaErrorGradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- MEDIA MODE: badge (duration) -->
    <LinearLayout
        android:id="@+id/mediaBadge"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="4dp"
        android:paddingEnd="8dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/badgePlayIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/badgeDurationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            tools:text="1:23" />
    </LinearLayout>

    <!-- MEDIA MODE: error text -->
    <TextView
        android:id="@+id/mediaErrorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        tools:text="Upload error" />

    <!-- CLOSE BUTTON (both modes) -->
    <ImageView
        android:id="@+id/closeButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:scaleType="fitCenter"
        android:padding="2dp" />

</merge>
