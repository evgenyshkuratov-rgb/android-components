<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ChipsView">
        <attr name="chipState" format="enum">
            <enum name="default_state" value="0"/>
            <enum name="active" value="1"/>
            <enum name="avatar" value="2"/>
        </attr>
        <attr name="chipSize" format="enum">
            <enum name="small" value="0"/>
            <enum name="medium" value="1"/>
        </attr>
        <attr name="chipText" format="string"/>
        <attr name="chipIcon" format="reference"/>
        <attr name="chipAvatarImage" format="reference"/>
        <attr name="chipCloseIcon" format="reference"/>
        <attr name="chipsBackgroundDefault"/>
        <attr name="chipsBackgroundActive"/>
        <attr name="chipsTextPrimary"/>
        <attr name="chipsCloseIconTint"/>
    </declare-styleable>

    <attr name="chipsBackgroundDefault" format="color"/>
    <attr name="chipsBackgroundActive" format="color"/>
    <attr name="chipsTextPrimary" format="color"/>
    <attr name="chipsCloseIconTint" format="color"/>

    <declare-styleable name="CheckboxView">
        <attr name="checkboxShape" format="enum">
            <enum name="square" value="0"/>
            <enum name="circle" value="1"/>
        </attr>
        <attr name="checkboxChecked" format="boolean"/>
        <attr name="checkboxEnabled" format="boolean"/>
        <attr name="checkboxShowText" format="boolean"/>
        <attr name="checkboxText" format="string"/>
        <attr name="checkboxBorderEnabled" format="color"/>
        <attr name="checkboxBorderDisabled" format="color"/>
        <attr name="checkboxCheckedFill" format="color"/>
        <attr name="checkboxCheckedFillDisabled" format="color"/>
        <attr name="checkboxCheckmarkColor" format="color"/>
        <attr name="checkboxTextEnabled" format="color"/>
        <attr name="checkboxTextDisabled" format="color"/>
    </declare-styleable>

    <declare-styleable name="AttachedMediaView">
        <attr name="attachedMediaType" format="enum">
            <enum name="file" value="0"/>
            <enum name="media" value="1"/>
        </attr>
        <attr name="attachedFileType" format="enum">
            <enum name="file" value="0"/>
            <enum name="audio" value="1"/>
            <enum name="image" value="2"/>
            <enum name="video" value="3"/>
        </attr>
        <attr name="attachedFileName" format="string"/>
        <attr name="attachedFileSize" format="string"/>
        <attr name="attachedErrorText" format="string"/>
        <attr name="attachedIsError" format="boolean"/>
        <attr name="attachedMediaDuration" format="string"/>
        <attr name="attachedShowBadge" format="boolean"/>
        <attr name="attachedBackgroundFile" format="color"/>
        <attr name="attachedBackgroundFileError" format="color"/>
        <attr name="attachedFilePreviewBg" format="color"/>
        <attr name="attachedFileIconTint" format="color"/>
        <attr name="attachedFileIconErrorTint" format="color"/>
        <attr name="attachedFileNameColor" format="color"/>
        <attr name="attachedFileSizeColor" format="color"/>
        <attr name="attachedFileNameErrorColor" format="color"/>
        <attr name="attachedFileSubErrorColor" format="color"/>
        <attr name="attachedMediaErrorTextColor" format="color"/>
        <attr name="attachedCloseButtonBg" format="color"/>
        <attr name="attachedCloseIconTint" format="color"/>
        <attr name="attachedBadgeBg" format="color"/>
        <attr name="attachedBadgeTextColor" format="color"/>
        <attr name="attachedDangerColor" format="color"/>
        <attr name="attachedVideoPlayBg" format="color"/>
        <attr name="attachedVideoPlayIconTint" format="color"/>
    </declare-styleable>
</resources>
